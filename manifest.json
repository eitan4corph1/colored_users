{
  "name": "Colored users",
  "description": "Display user posts name in color",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://rotter.net/forum/scoops1/*"
      ]
    }
  ],
  "commands": {
    "set_red": {
      "suggested_key": {
        "default": "Ctrl+Shift+3"
      },
      "description": "Set red"
    },
    "set_blue": {
      "suggested_key": {
        "default": "Ctrl+Shift+4"
      },
      "description": "Set blue"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}